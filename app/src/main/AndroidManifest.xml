<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.edu.uteq.dapps.demonavdrawer196">

    <!-- CUANDO UNA APLICACIÓN UTILIZARÁ ALGUN COMPONENTE EXTERNO O HARDWARE DEL DISPOSITIVO
    (CÁMARA, MICRÓFONO, CONTACTO, GALERÍA, ACELERÓMETRO, GIROSCOPIO, BLUETOOTH, ETC..)
    ES NECESARIO INDICAR D EMANERA EXPLÍCITA EL COMPONENTE QUE SE REQUIERE DEJANDO A DESICIÓN
     DEL USUARIO SI SE HABILITA O NO


     dentro de <application la propiedad
     android:allowClearUserData="true"
     permite cnectar a un servicio con http

     -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DemoNavDrawer196"
        android:allowClearUserData="true">
        <activity
            android:name=".InicioActivity"
            android:exported="true"
            android:label="@string/title_activity_inicio"
            android:theme="@style/Theme.DemoNavDrawer196.NoActionBar">
            <!-- Indica que este activity incia la app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DemoNavDrawer196.NoActionBar">

        </activity>
    </application>

</manifest>