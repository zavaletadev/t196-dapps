<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <!--
    Los id dentro de un elemento XML en android
    son indexables (referencias a recursos) por lo tanto
    deben indicarse con la nomenclatura
    @+id/_NOMBRE_ID
    **Los ID son irrepetibles en el mismo layout
    -->

    <fragment
        android:id="@+id/FirstFragment"
        android:name="mx.edu.uteq.dapps.holamundo196.FirstFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_first" >

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="mx.edu.uteq.dapps.holamundo196.SecondFragment"
        android:label="Segunda Pantalla"
        tools:layout="@layout/fragment_second" >

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>